{
	"swagger": "2.0",
	"info": {
		"version": "1.0.0",
		"title": "Marvel Server",
		"description": "Marvel Server API",
	},
	"basePath": "localhost:7000/",
	"tags" : [
		{
			"name": "Marvel",
			"description": "Marvel Server API"
		}
	],
	"schemes": [
		"https"
	],
	"consumes": [
		"application/json"
	],
	"produces": [
		"application/json"
	],
	"paths": {
		"/api/{path}": {
			"get": {
				"tags": ["Marvel"],
				"description": "Get list of items from API of Marvel",
				"operationId": "findAll",
				"produces": [
					"application/json"
				],
				"parameters": [
					{
						"name": "path",
						"in": "path",
						"description": "characters | comics | creators | events | series | stories",
						"required": true
					}
				],
				"responses": {
					"200": {
						"description": "Get list"
					}
				}
			}
		},
		"/api/{path}/{id}": {
			"get": {
				"tags": ["Marvel"],
				"description": "Get item by Id",
				"operationId": "findById",
				"produces": [
					"application/json"
				],
				"parameters": [
					{
						"name": "path",
						"in": "path",
						"description": "characters | comics | creators | events | series | stories",
						"required": true
					},
					{
						"name": "id",
						"in": "path",
						"description": "ID of item",
						"required": true,
						"type": "integer"
					}
				],
				"responses": {
					"200": {
						"description": "Get item by ID"
					}
				}
			}
		},
		"/api/{path}?limit={limit}&offset={offset}": {
			"get": {
				"tags":["Marvel"],
				"description":"Deletes a something",
				"operationId":"find(limit, offset)",
				"produces": [
					"application/json"
				],
				"parameters":[
					{
						"name": "path",
						"in": "path",
						"description": "characters | comics | creators | events | series | stories",
						"required": true
					},
					{
						"name": "limit",
						"in": "path",
						"description": "Quantity of values in the response",
						"required": false,
						"type": "integer"
					},
					{
						"name": "offset",
						"in": "path",
						"description": "Start index",
						"required": false,
						"type": "integer"
					}
				],
				"responses": {
					"200": {
						"description": "Get list",
					}
				}
			},
		}
	}
}
